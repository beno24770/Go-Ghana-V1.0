# Database Connection (Supabase PostgreSQL)
# Get this from Supabase Dashboard > Settings > Database > Connection string
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# JWT Secrets (Generate random strings for production)
JWT_SECRET="your_jwt_secret_key_change_me"
JWT_REFRESH_SECRET="your_jwt_refresh_secret_key_change_me"

# Frontend URL (for CORS and redirects)
FRONTEND_URL="http://localhost:5173"

# Email Service (Resend)
RESEND_API_KEY="re_123456789"

# Google OAuth
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Apple OAuth
APPLE_CLIENT_ID="your_apple_client_id"
APPLE_TEAM_ID="your_apple_team_id"
APPLE_KEY_ID="your_apple_key_id"
# Private key content or path
APPLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----...-----END PRIVATE KEY-----"

# Server Port
PORT=4000
